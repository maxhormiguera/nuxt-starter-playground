//@import '../styleResources/globals'

html
body
  min-width $breakpoint-xxs
  font-size 16px
  font-family 'Poppins', sans-serif
  scrollbar()


h1, h2, h3, h4, h5, p
  margin 0
h1
  font-size 3em
h2
  font-size 2.75em
h3
  font-size 1.6875rem
  font-weight 600
h4
  font-size 1.2rem
h5
  font-size 0.9rem

ol, ul
  list-style-type none

.container
  max-width $breakpoint-md
  margin auto